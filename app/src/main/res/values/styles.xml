<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="defaultButtonStyle">@style/DefaultButtonStyle</item>
    </style>

    <style name="ProductAddButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/add_to_cart</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/polo_blue</item>
    </style>
</resources>