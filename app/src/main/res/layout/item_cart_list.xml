<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="callback"
            type="com.agah.furkan.androidplayground.ui.cart.CartListCallback" />

        <variable
            name="item"
            type="com.agah.furkan.androidplayground.domain.model.result.Cart" />
    </data>

    <com.agah.furkan.androidplayground.view.CustomCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin8"
        app:contentPadding="@dimen/padding8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.agah.furkan.androidplayground.view.CustomImageView
                android:id="@+id/item_cart_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:imageSrc="@{item.picture}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_round_home" />

            <com.agah.furkan.androidplayground.view.CustomTextView
                android:id="@+id/item_cart_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin4"
                android:text="@{item.productName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_cart_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Product Title" />

            <com.agah.furkan.androidplayground.view.CustomTextView
                android:id="@+id/item_cart_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin4"
                android:layout_marginEnd="@dimen/margin8"
                app:layout_constraintEnd_toStartOf="@id/item_cart_remove_button"
                app:layout_constraintStart_toEndOf="@id/item_cart_image"
                app:layout_constraintTop_toBottomOf="@id/item_cart_title"
                app:productPrice="@{item}"
                tools:text="999" />

            <com.agah.furkan.androidplayground.view.CustomTextView
                android:id="@+id/item_cart_price_discounted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin4"
                android:layout_marginEnd="@dimen/margin8"
                android:textStyle="bold"
                app:discountedProductPrice="@{item}"
                app:layout_constraintEnd_toStartOf="@id/item_cart_remove_button"
                app:layout_constraintStart_toEndOf="@id/item_cart_image"
                app:layout_constraintTop_toBottomOf="@id/item_cart_price"
                tools:text="999" />

            <com.agah.furkan.androidplayground.view.CustomImageButton
                android:id="@+id/item_cart_remove_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{(view) -> callback.onRemoveClick(item)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_cart_title"
                app:srcCompat="@drawable/ic_delete"
                app:tint="@android:color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.agah.furkan.androidplayground.view.CustomCardView>
</layout>
